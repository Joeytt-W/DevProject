@using Dev.Web.Controllers

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <form id="LoginForm" action="@Url.Action("Login")" method="post">
        <div class="form-group">
            <label for="loginAccount">账号</label>
            <input type="text" class="form-control" id="loginAccount" name="loginAccount" placeholder="账号">
        </div>

        <div class="form-group">
            <label for="loginPassword">账号</label>
            <input type="password" class="form-control" id="loginPassword" name="loginPassword" placeholder="密码">
        </div>
        
        <div class="form-group">
            <button type="submit">登录</button>
        </div>
    </form>
</div>


@{
    Layout = null;
}
@Model Framework.MainEntity.ViewModel.LoginModel


<div class="row">

    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form" }))
    {
        <div class="col-md-12">
            @Html.ValidationSummary()
        </div>
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(c => c.EmployeeNo)
            @Html.TextBoxFor(c => c.EmployeeNo, new { @class = "form-control required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.Name)
            @Html.TextBoxFor(c => c.Name, new { @class = "form-control required" })
        </div>

        <div class="col-md-12" style="margin-top:10px;">
            <button type="submit">保存</button>
        </div>
    }
</div>
